{
    "name": "passionator/string-operations",
    "description": "String operations in PHP",
    "keywords": [
        "passionator",
        "string-operations"
    ],
    "homepage": "https://github.com/spatie/string-operations",
    "license": "MIT",
    "authors": [
        {
            "name": "Passionmuse2303",
            "email": "passionmuse1216@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Passionator\\StringOperations\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Passionator\\StringOperations\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
